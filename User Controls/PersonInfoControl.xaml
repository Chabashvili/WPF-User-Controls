<UserControl x:Class="User_Controls.PersonInfoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:User_Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Name: "/>
            <TextBlock Text="{Binding PersonName}" FontWeight="Bold"/>
            <TextBlock Text="Age: "/>
            <TextBlock Text="{Binding PersonAge}" FontWeight="Bold"/>
            <TextBlock Text="Country: "/>
            <TextBlock Text="{Binding PersonCountry}" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</UserControl>
